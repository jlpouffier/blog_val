<div class="w3-margin-bottom recipe-summary">
	<i>
	<%= @recipe.created_at.to_time.strftime('%d/%m/%Y') %> | 
	<% @categories.each do |category| %>
		<%= link_to category.title, category %>
	    <% if category != @categories.last %>
	      x
	    <% end %>
	<% end %>
	</i>
</div>
<div class="recipe-summary">
		<i class="fas fa-bolt"></i> <strong>Difficult√©</strong> | <%= complexity_human(@recipe) %><br>
		<% if @recipe.preparation_time? %>
			<i class="fas fa-play"></i> <strong>Preparation</strong> | <%= preparation_time_human(@recipe) %><br>
		<% end %>
		<% if @recipe.waiting_time? %>
			<i class="fas fa-pause"></i> <strong>Repos</strong> | <%= waiting_time_human(@recipe) %><br>
		<% end %>
		<% if @recipe.baking_time? %>
			<i class="fas fa-fire"></i> <strong>Cuisson</strong> | <%= baking_time_human(@recipe) %><br>
		<% end %>
	</p>
</div>
