<div class="w3-margin-bottom">
  <%= @recipe.created_at.to_time.strftime('%d/%m/%Y') %> | 
  <% @recipe.categories.each do |category| %>
    <%= link_to category.title, category %>
    <% if category != @recipe.categories.last %>
      |
    <% end %>
  <% end %>
</div>
<h5><i class="fas fa-bolt"></i> Difficult√© | <%= @recipe.complexity_human %></h5>
<% if @recipe.preparation_time? %><h5><i class="fas fa-play"></i> Preparation | <%= @recipe.preparation_time_human %></h5><% end %>
<% if @recipe.waiting_time? %><h5><i class="fas fa-pause"></i> Repos | <%= @recipe.waiting_time_human %></h5><% end %>
<% if @recipe.baking_time? %><h5><i class="fas fa-fire"></i> Cuisson | <%= @recipe.baking_time_human %></h5><% end %>